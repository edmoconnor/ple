<!-- views/profile.ejs -->
<!doctype html>
<html ng-app="core">
<head>
	<title>Node Authentication</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>	
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script><!-- load jquery -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script><!-- load angular -->
    <script src="/core.js"></script>
    <script src="/tabs.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body { padding-top:0px; word-wrap:break-word; }
		.container{ width: 100%; padding: 0; margin: 0;}
		.btn-sm, .btn-xs{ float: left; padding: 0; margin: 50px}
		.page-header{ margin: 0 0 0px 0; border-bottom: 1px solid black; padding: 10px 10px 10px 10px} 
		h1{margin: 10px 0 0 10px; float: left; font-size: 24px; color: white} 
		.dropdown{float: right; position: absolute; margin: 0px 0 0 0;}
		.fa{margin-right: 10px}
		.glyphicon{padding: 0 3px 0 0px;}
		.btn{padding: 0; border: 0; margin: -5px 0 0 0; width: 120px, font-align: left}	
		.btn:active {
	    -webkit-box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
	    -moz-box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
	    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
	    color: #FFFFFF;
	    border: solid 1px #FFFFFF;}
	</style>
	<script>

	</script>
</head>
<body>
<%- include navbar %>
<div class="container" ng-controller="demoCtrl">
	<div class="row">
		<%- include sidebar %>
			<div class="col-md-10">
				<div dynamic-template template-var="{{templateVar}}"></div>
			</div>
		    <script id="/test1.tpl.html" type="text/ng-template">
	            <div class="col-md-9" ng-controller="mainController">
		            <div id="user-list" class="row">
		                <!-- LOOP OVER THE users IN $scope.USERS -->
		                <div class="checkbox" ng-repeat="user in users">
		                    <label>
		                        <input type="checkbox" ng-click="deleteUser(user._id)"> {{ user.local.email }}
		                    </label>
		                </div>
		            </div>
		        </div>
		    </script>
		
		    <script id="/test2.tpl.html" type="text/ng-template">
				<div class="well">
					<h3><span class="fa fa-user"></span> Local</h3>
					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>email</strong>: <%= user.local.email %><br>
						<strong>password</strong>: <%= user.local.password %>
					</p>		
				</div>	
		    </script>
		    
		    <script id="/test3.tpl.html" type="text/ng-template">
		      <div>
		            <div class="col-md-3" ng-controller="mainController" style="background-color: green">
		            <div id="user-list" class="row">
		                <!-- LOOP OVER THE users IN $scope.USERS -->
		                <div ng-repeat="user in users">
			                <ul>
				                <li>
		                        	{{ user.local.email }}
		                        </li>
	                        </ul>
		                </div>
		            </div>
		        	</div>
				<div class="col-md-3" style="background-color: blue">
					<div class="well">
						<h3><span class="fa fa-user"></span> Local</h3>
						<p>
							<strong>id</strong>: <%= user._id %><br>
							<strong>email</strong>: <%= user.local.email %><br>
							<strong>password</strong>: <%= user.local.password %>
						</p>		
					</div>
				</div>
				<div class="col-md-3" style="background-color: red">
					<div class="col-md-3" ng-controller="mainController">
						<div id="user-list" class="row">
			                <!-- LOOP OVER THE users IN $scope.USERS -->
			                <div class="checkbox" ng-repeat="user in users">
			                    <label>
			                        <input type="checkbox" ng-click="deleteUser(user._id)"> {{ user.local.email }}
			                    </label>
			                </div>
			            </div>
		            </div>
				</div>
				
		      </div>
		    </script>
	</div>	
</div>
</body>
</html>
